<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/question_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/question_item_user_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:src="@drawable/sora" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/question_item_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="赤暮"
                android:textColor="#000000"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/question_item_recent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回复于8分钟前"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/question_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="这是标题"
        android:textColor="#000000"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/question_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:text="这是正文\nsjnsjsovdiosvoidjsiovjsovjsoivhsiubvisjbvksjbvksdjvbskjvbisjvbsvs" />
    <!--    <LinearLayout-->
    <!--        android:orientation="horizontal"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content">-->
    <!--        <ImageView-->
    <!--            android:id="@+id/question_item_content_img"-->
    <!--            android:layout_width="100dp"-->
    <!--            android:layout_height="100dp"-->
    <!--            android:src="@drawable/sora" />-->
    <!--        <ImageView-->
    <!--            android:src="@drawable/sora"-->
    <!--            android:layout_width="100dp"-->
    <!--            android:layout_height="100dp"/>-->
    <!--    </LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/question_item_exciting"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/hand_thumbsup" />

            <TextView
                android:id="@+id/question_item_exciting_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/question_item_answer_img"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/chat_bubble_text" />

            <TextView
                android:id="@+id/question_item_answer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/question_item_naive_img"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:src="@drawable/hand_thumbsdown" />

            <TextView
                android:id="@+id/question_item_naive_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="0" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>