<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="4dp"
    app:elevation="5dp">

    <LinearLayout
        android:id="@+id/question_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.example.bihu.widget.CircleImageView
                android:id="@+id/question_item_user_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:src="@drawable/no_avatar"
                android:transitionName="sharedAvatar"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/question_item_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赤暮"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:transitionName="sharedName"/>

                <TextView
                    android:id="@+id/question_item_recent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="回复于8分钟前"
                    android:textSize="10dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/question_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="这是标题"
            android:textColor="#000000"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/question_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="5dp"
            android:text="这是正文\nsjnsjsovdiosvoidjsiovjsovjsoivhsiubvisjbvksjbvksdjvbskjvbisjvbsvs" />

        <ImageView
            android:id="@+id/question_item_content_img"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/question_item_exciting_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/hand_thumbsup" />

                <TextView
                    android:id="@+id/question_item_exciting_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/question_item_answer_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/chat" />

                <TextView
                    android:id="@+id/question_item_answer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="0" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/question_item_naive_img"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:src="@drawable/hand_thumbsdown" />

                <TextView
                    android:id="@+id/question_item_naive_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="0" />
            </LinearLayout>
            <ImageView
                android:id="@+id/question_item_favorite_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:paddingLeft="5dp"
                android:src="@drawable/star"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>